.side-bar
  .side-bar__user-name
    .top-items
      .top-items_name
        = current_user.name
      .top-items_icons
        = link_to new_group_path do
          = icon('far', 'edit', class: 'icon1')
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: 'icon2')

  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
             
      
        